@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @_currentCount</p>
<MudButton OnClick="IncrementCount" Variant="Variant.Outlined" Color="Color.Error">Click me</MudButton>

@code {
    private int _currentCount;

    private void IncrementCount()
    {
        _currentCount++;
    }
}
